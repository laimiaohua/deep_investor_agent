# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install pnpm if not available
RUN npm install -g pnpm

# Copy package files first for dependency caching
COPY app/frontend/package*.json ./
COPY app/frontend/pnpm-lock.yaml* ./

# Install dependencies first (this creates node_modules in /app)
RUN pnpm install --no-frozen-lockfile

# Copy source code (node_modules is excluded by .dockerignore at project root)
# The .dockerignore file excludes node_modules/, so it won't be copied
COPY app/frontend/ ./

# Build arguments for API URL
ARG VITE_API_URL=/api
ENV VITE_API_URL=${VITE_API_URL}

# Build the application
RUN pnpm run build

# Production stage
FROM nginx:alpine

# Copy built files from builder
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy custom nginx config for SPA
COPY docker/nginx/nginx-frontend.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

